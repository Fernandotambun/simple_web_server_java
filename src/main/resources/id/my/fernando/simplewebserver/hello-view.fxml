<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <children>
        <GridPane VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Port:" />
                <TextField fx:id="portField" promptText="Port" GridPane.columnIndex="1" />
                <Label text="Web Directory:" GridPane.rowIndex="1" />
                <TextField fx:id="webDirectoryField" promptText="Web Directory" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="browseWebDirectoryButton" mnemonicParsing="false" onAction="#browseWebDirectory" text="Browse" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label text="Log Directory:" GridPane.rowIndex="2" />
                <TextField fx:id="logDirectoryField" promptText="Log Directory" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="browseLogDirectoryButton" mnemonicParsing="false" onAction="#browseLogDirectory" text="Browse" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <Button fx:id="startButton" disable="true" mnemonicParsing="false" onAction="#startServer" text="Start" />
        <Button fx:id="stopButton" disable="true" mnemonicParsing="false" onAction="#stopServer" text="Stop" />
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <Label text="Log:" />
                <TextArea fx:id="logTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</VBox>
